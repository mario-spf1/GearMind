<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gearmind.presentation.controller.ClientesController">

    <top>
        <HBox spacing="12" styleClass="tfx-toolbar">
            <children>
                <Label text="Clientes" styleClass="tfx-toolbar-title"/>
                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="txtBuscar"
                           promptText="Buscar cliente..."
                           prefWidth="220"/>

                <Button text="Nuevo cliente"
                        fx:id="btnNuevoCliente"
                        styleClass="tfx-btn-primary"
                        onAction="#onNuevoCliente"/>

                <Button text="Inicio"
                        onAction="#onVolverHome"
                        styleClass="tfx-btn-ghost"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="12" styleClass="tfx-page">
            <children>
                <TableView fx:id="tblClientes"
                           prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colNombre" text="Nombre"/>
                        <TableColumn fx:id="colEmail" text="Email"/>
                        <TableColumn fx:id="colTelefono" text="TelÃ©fono"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>
