<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gearmind.presentation.controller.ReparacionFormController"
            prefWidth="560" prefHeight="520"
            styleClass="tfx-root">

    <center>
        <VBox spacing="12" styleClass="tfx-card">
            <padding>
                <Insets top="16" right="16" bottom="16" left="16"/>
            </padding>
            <children>
                <Label fx:id="lblTitulo" text="Nueva reparación" styleClass="tfx-title"/>
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="140.0" prefWidth="150.0" halignment="RIGHT"/>
                        <ColumnConstraints minWidth="280.0" hgrow="ALWAYS"/>
                    </columnConstraints>
                    <children>
                        <Label text="Cliente:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cbCliente" editable="true" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
                        <Label text="Vehículo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cbVehiculo" editable="true" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
                        <Label text="Cita ID (opcional):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCitaId" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
                        <Label text="Estado:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cbEstado" GridPane.rowIndex="3" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
                        <Label text="Importe estimado:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtImporteEstimado" GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
                        <Label text="Importe final:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtImporteFinal" GridPane.rowIndex="5" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
                        <Label text="Descripción:" GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.valignment="TOP"/>
                        <TextArea fx:id="txtDescripcion" prefRowCount="4" GridPane.rowIndex="6" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS"/>
                    </children>
                </GridPane>

                <Region VBox.vgrow="ALWAYS"/>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Cancelar" onAction="#onCancelar" styleClass="button tfx-btn-ghost"/>
                        <Button text="Guardar" onAction="#onGuardar" styleClass="button tfx-btn-primary"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>