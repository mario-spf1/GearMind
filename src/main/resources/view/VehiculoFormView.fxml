<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gearmind.presentation.controller.VehiculoFormController"
            styleClass="tfx-root">

    <center>
        <VBox spacing="16" styleClass="tfx-card">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>

            <Label text="Datos del vehículo" styleClass="tfx-title-xl"/>
            <GridPane hgap="12" vgap="12" styleClass="tfx-grid">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>
                <Label text="Cliente" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbCliente" promptText="Selecciona un cliente" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Matrícula" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtMatricula" promptText="1234-ABC" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Marca" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtMarca" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="Modelo" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtModelo" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label text="Año" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtYear" promptText="2020" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Label text="VIN" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="txtVin" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="8" alignment="CENTER_RIGHT">
                <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar" styleClass="button tfx-btn-ghost"/>
                <Button fx:id="btnGuardar" text="Guardar" onAction="#onGuardar" styleClass="button tfx-btn-primary"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
