<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearmind.presentation.controller.VehiculoFormController"
      spacing="12"
      styleClass="tfx-page">

    <children>

        <Label fx:id="lblTitulo" text="Vehículo" styleClass="tfx-title-xl"/>

        <VBox styleClass="tfx-card" spacing="12">
            <children>
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>

                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>

                    <children>
                        <Label fx:id="lblEmpresa" text="Empresa:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <HBox fx:id="boxEmpresa" spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="0" GridPane.columnIndex="1">
                            <ComboBox fx:id="cmbEmpresa" prefWidth="260"/>
                        </HBox>
                        <Label text="Cliente:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cmbCliente" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <Label text="Matrícula:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtMatricula" promptText="1234-ABC" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                        <Label text="Marca:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtMarca" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        <Label text="Modelo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtModelo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                        <Label text="Año:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtYear" promptText="2020" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                        <Label text="VIN:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtVin" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
            </children>
        </VBox>

        <HBox spacing="8">
            <children>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Cancelar" onAction="#onCancelar" styleClass="tfx-btn-ghost"/>
                <Button fx:id="btnGuardar" text="Guardar" onAction="#onGuardar" styleClass="tfx-btn-primary"/>
            </children>
        </HBox>

    </children>
</VBox>
