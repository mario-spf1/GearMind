<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearmind.presentation.controller.UsuariosController"
      spacing="12"
      styleClass="tfx-page">

    <children>
        <HBox spacing="12" styleClass="tfx-toolbar">
            <children>
                <Label text="Usuarios" styleClass="tfx-toolbar-title"/>

                <Region HBox.hgrow="ALWAYS"/>

                <TextField fx:id="txtBuscar"
                           promptText="Buscar por nombre, email, rol o estado"
                           styleClass="tfx-search"/>

                <Label text="Por pÃ¡gina:" styleClass="tfx-muted"/>
                <ComboBox fx:id="cmbPageSize" prefWidth="80"/>

                <Button text="Refrescar" onAction="#onRefrescar" styleClass="tfx-btn-ghost"/>

                <Button text="Nuevo usuario" onAction="#onNuevoUsuario" styleClass="tfx-btn-primary"/>
            </children>
        </HBox>

        <VBox spacing="6" styleClass="tfx-card">
            <children>
                <TableView fx:id="tblUsuarios">
                    <columns>
                        <TableColumn fx:id="colNombre" text="Nombre"/>
                        <TableColumn fx:id="colEmail" text="Email"/>
                        <TableColumn fx:id="colRol" text="Rol" prefWidth="120"/>
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                        <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="200"/>
                    </columns>
                </TableView>

                <!-- Filtros por columna -->
                <HBox spacing="8" styleClass="tfx-filter-row">
                    <children>
                        <TextField fx:id="filterNombreField"
                                   promptText="Filtrar nombre..."
                                   styleClass="tfx-filter-field"
                                   HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="filterEmailField"
                                   promptText="Filtrar email..."
                                   styleClass="tfx-filter-field"
                                   HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="filterRolField"
                                   promptText="Filtrar rol..."
                                   styleClass="tfx-filter-field"
                                   HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="filterEstadoField"
                                   promptText="Filtrar activo / inactivo"
                                   styleClass="tfx-filter-field"
                                   HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>

                <HBox spacing="8">
                    <children>
                        <Label fx:id="lblResumen" styleClass="tfx-muted"/>
                        <Region HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
