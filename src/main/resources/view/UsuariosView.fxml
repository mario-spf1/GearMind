<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearmind.presentation.controller.UsuariosController"
      spacing="16"
      styleClass="tfx-page">

    <children>

        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Usuarios" styleClass="tfx-title-xl"/>
            <Label fx:id="lblTotalUsuarios" text="" styleClass="tfx-muted"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Mostrar" styleClass="tfx-muted"/>
            <ComboBox fx:id="cmbPageSize" prefWidth="90"/>
            <Label text="por página" styleClass="tfx-muted"/>
            <Button text="Recargar" onAction="#onRefrescar" styleClass="button tfx-btn-ghost"/>
            <Button fx:id="btnNuevo" text="Nuevo usuario" onAction="#onNuevoUsuario" styleClass="button tfx-btn-primary"/>
        </HBox>
        <VBox spacing="12" styleClass="tfx-card">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <children>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <HBox fx:id="boxFilterEmpresa" spacing="8" alignment="CENTER_LEFT">
                        <Label text="Empresa" styleClass="tfx-muted"/>
                        <ComboBox fx:id="filterEmpresaCombo" prefWidth="220"/>
                    </HBox>
                    <TextField fx:id="filterNombreField" promptText="Nombre" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                    <TextField fx:id="filterEmailField" promptText="Email" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                    <TextField fx:id="filterTelefonoField" promptText="Teléfono" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="filterUsuarioField" promptText="Usuario" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                    <HBox spacing="8" alignment="CENTER_LEFT">
                        <Label text="Estado:" styleClass="tfx-muted"/>
                        <ComboBox fx:id="filterEstadoCombo" prefWidth="170"/>
                    </HBox>
                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button text="Limpiar filtros" onAction="#onLimpiarFiltros" styleClass="button tfx-btn-ghost"/>
                </HBox>
                <TextField fx:id="txtBuscar" visible="false" managed="false"/>
            </children>
        </VBox>

        <VBox spacing="6" styleClass="tfx-card">
            <children>
                <TableView fx:id="tblUsuarios">
                    <columns>
                        <TableColumn fx:id="colEmpresa" text="Empresa" prefWidth="160"/>
                        <TableColumn fx:id="colNombre" text="Nombre"/>
                        <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="160"/>
                        <TableColumn fx:id="colEmail" text="Email"/>
                        <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="130"/>
                        <TableColumn fx:id="colRol" text="Rol" prefWidth="120"/>
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                        <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="220"/>
                    </columns>
                </TableView>
                
                <Label fx:id="lblResumen" styleClass="tfx-muted"/>
            </children>
        </VBox>

    </children>
</VBox>
