<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearmind.presentation.controller.EmpresasController"
      spacing="12"
      styleClass="tfx-page">

    <children>

        <HBox spacing="12" styleClass="tfx-toolbar">
            <children>
                <Label text="Empresas" styleClass="tfx-toolbar-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Por página:" styleClass="tfx-muted"/>
                <ComboBox fx:id="cmbPageSize" prefWidth="80"/>
                <Button text="Refrescar" onAction="#onRefrescar" styleClass="tfx-btn-ghost"/>
                <Button fx:id="btnNueva" text="Nueva empresa" onAction="#onNuevaEmpresa" styleClass="tfx-btn-primary"/>
            </children>
        </HBox>

        <VBox spacing="8" styleClass="tfx-card">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>

            <children>
                <Label text="Filtros" styleClass="tfx-muted"/>
                <GridPane hgap="8" vgap="6">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>

                    <children>
                        <TextField fx:id="filterNombreField" promptText="Nombre" styleClass="tfx-filter-field" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="filterCifField" promptText="CIF" styleClass="tfx-filter-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                        <TextField fx:id="filterTelefonoField" promptText="Teléfono" styleClass="tfx-filter-field" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                        <TextField fx:id="filterEmailField" promptText="Email" styleClass="tfx-filter-field" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                        <TextField fx:id="filterCiudadField" promptText="Ciudad" styleClass="tfx-filter-field" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="filterProvinciaField" promptText="Provincia" styleClass="tfx-filter-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                        <TextField fx:id="filterCpField" promptText="CP" styleClass="tfx-filter-field" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                        <TextField fx:id="filterEstadoField" promptText="Activa / inactiva" styleClass="tfx-filter-field" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                    </children>
                </GridPane>

                <TextField fx:id="txtBuscar" visible="false" managed="false"/>
                <HBox spacing="8">
                    <children>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Limpiar filtros" onAction="#onLimpiarFiltros" styleClass="tfx-btn-ghost"/>
                    </children>
                </HBox>
            </children>
        </VBox>

        <VBox spacing="6" styleClass="tfx-card">
            <children>

                <TableView fx:id="tblEmpresas">
                    <columns>
                        <TableColumn fx:id="colNombre" text="Nombre"/>
                        <TableColumn fx:id="colCif" text="CIF" prefWidth="120"/>
                        <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
                        <TableColumn fx:id="colEmail" text="Email"/>
                        <TableColumn fx:id="colCiudad" text="Ciudad" prefWidth="140"/>
                        <TableColumn fx:id="colProvincia" text="Provincia" prefWidth="140"/>
                        <TableColumn fx:id="colCp" text="CP" prefWidth="80"/>
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                        <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="200"/>
                    </columns>
                </TableView>

                <HBox spacing="8">
                    <children>
                        <Label fx:id="lblResumen" styleClass="tfx-muted"/>
                        <Region HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
            </children>
        </VBox>

    </children>
</VBox>
