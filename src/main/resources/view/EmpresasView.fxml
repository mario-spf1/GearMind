<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.gearmind.presentation.controller.EmpresasController" spacing="12" styleClass="tfx-page">
    <children>

        <HBox spacing="12" styleClass="tfx-toolbar">
            <children>
                <Label text="Empresas" styleClass="tfx-toolbar-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <TextField fx:id="txtBuscar" promptText="Buscar por nombre, CIF, ciudad..." styleClass="tfx-search"/>
                <Label text="Por página:" styleClass="tfx-muted"/>
                <ComboBox fx:id="cmbPageSize" prefWidth="80"/>
                <Button text="Refrescar" onAction="#onRefrescar" styleClass="tfx-btn-ghost"/>
                <Button fx:id="btnNueva" text="Nueva empresa" onAction="#onNuevaEmpresa" styleClass="tfx-btn-primary"/>
            </children>
        </HBox>

        <VBox spacing="8" styleClass="tfx-card">
            <children>
                <TableView fx:id="tblEmpresas" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colNombre" text="Nombre" prefWidth="180"/>
                        <TableColumn fx:id="colCif" text="CIF" prefWidth="120"/>
                        <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="130"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="220"/>
                        <TableColumn fx:id="colCiudad" text="Ciudad" prefWidth="140"/>
                        <TableColumn fx:id="colProvincia" text="Provincia" prefWidth="140"/>
                        <TableColumn fx:id="colCp" text="CP" prefWidth="70"/>
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
                        <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="190"/>
                    </columns>
                </TableView>
                <HBox spacing="8">
                    <children>
                        <Label fx:id="lblResumen" text="Mostrando 0 de 0 empresas" styleClass="tfx-muted"/>
                        <Region HBox.hgrow="ALWAYS"/>
                    </children>
                </HBox>
            </children>
        </VBox>
        
    </children>
</VBox>
