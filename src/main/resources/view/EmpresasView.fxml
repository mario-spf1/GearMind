<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearmind.presentation.controller.EmpresasController"
      spacing="16"
      styleClass="tfx-page">

    <children>

        <HBox spacing="8" alignment="CENTER_LEFT">
            <Label text="Empresas" styleClass="tfx-title-xl"/>
            <Label fx:id="lblTotalEmpresas" text="" styleClass="tfx-muted"/>
            <Pane HBox.hgrow="ALWAYS"/>

            <Label text="Mostrar" styleClass="tfx-muted"/>
            <ComboBox fx:id="cmbPageSize" prefWidth="90"/>
            <Label text="por página" styleClass="tfx-muted"/>

            <Button text="Recargar" onAction="#onRefrescar" styleClass="button tfx-btn-ghost"/>
            <Button fx:id="btnNueva" text="Nueva empresa" onAction="#onNuevaEmpresa" styleClass="button tfx-btn-primary"/>
        </HBox>

        <VBox spacing="12" styleClass="tfx-card">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <children>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="filterNombreField" promptText="Nombre" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                    <TextField fx:id="filterCifField" promptText="CIF" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                    <TextField fx:id="filterTelefonoField" promptText="Teléfono" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                    <TextField fx:id="filterEmailField" promptText="Email" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="filterCiudadField" promptText="Ciudad" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                    <TextField fx:id="filterProvinciaField" promptText="Provincia" HBox.hgrow="ALWAYS" styleClass="text-field"/>
                    <TextField fx:id="filterCpField" promptText="CP" prefWidth="140" styleClass="text-field"/>

                    <HBox spacing="6" alignment="CENTER_LEFT">
                        <Label text="Estado:" styleClass="tfx-muted"/>
                        <ComboBox fx:id="filterEstadoCombo" prefWidth="150"/>
                    </HBox>

                    <Pane HBox.hgrow="ALWAYS"/>
                    <Button text="Limpiar filtros" onAction="#onLimpiarFiltros" styleClass="button tfx-btn-ghost"/>
                </HBox>



                <TextField fx:id="txtBuscar" visible="false" managed="false"/>
            </children>
        </VBox>

        <VBox spacing="6" styleClass="tfx-card">
            <children>

                <TableView fx:id="tblEmpresas">
                    <columns>
                        <TableColumn fx:id="colNombre" text="Nombre"/>
                        <TableColumn fx:id="colCif" text="CIF" prefWidth="120"/>
                        <TableColumn fx:id="colTelefono" text="Teléfono" prefWidth="120"/>
                        <TableColumn fx:id="colEmail" text="Email"/>
                        <TableColumn fx:id="colCiudad" text="Ciudad" prefWidth="140"/>
                        <TableColumn fx:id="colProvincia" text="Provincia" prefWidth="140"/>
                        <TableColumn fx:id="colCp" text="CP" prefWidth="80"/>
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="110"/>
                        <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="200"/>
                    </columns>
                </TableView>

                <Label fx:id="lblResumen" styleClass="tfx-muted"/>
            </children>
        </VBox>

    </children>
</VBox>
