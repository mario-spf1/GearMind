<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearmind.presentation.controller.UsuarioFormController"
      spacing="12"
      styleClass="tfx-page">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>

    <children>
        <Label text="Usuario" styleClass="tfx-title-xl"/>

        <VBox spacing="8" styleClass="tfx-card">
            <children>
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <children>
                        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtNombre"
                                   promptText="Nombre completo"
                                   GridPane.rowIndex="0"
                                   GridPane.columnIndex="1"/>

                        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtEmail"
                                   promptText="correo@ejemplo.com"
                                   GridPane.rowIndex="1"
                                   GridPane.columnIndex="1"/>

                        <Label text="ContraseÃ±a:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="pwdPassword"
                                       promptText="(dejar en blanco para no cambiar)"
                                       GridPane.rowIndex="2"
                                       GridPane.columnIndex="1"/>

                        <Label text="Rol:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cmbRol"
                                  prefWidth="200"
                                  GridPane.rowIndex="3"
                                  GridPane.columnIndex="1"/>

                        <Label text="Activo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <CheckBox fx:id="chkActivo"
                                  GridPane.rowIndex="4"
                                  GridPane.columnIndex="1"/>
                    </children>
                </GridPane>
            </children>
        </VBox>

        <HBox spacing="8">
            <children>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnCancelar"
                        text="Cancelar"
                        onAction="#onCancelar"
                        styleClass="tfx-btn-ghost"/>
                <Button fx:id="btnGuardar"
                        text="Guardar"
                        onAction="#onGuardar"
                        styleClass="tfx-btn-primary"/>
            </children>
        </HBox>
    </children>
</VBox>
