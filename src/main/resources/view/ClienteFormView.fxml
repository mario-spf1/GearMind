<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gearmind.presentation.controller.ClienteFormController"
      spacing="12"
      styleClass="tfx-page">

    <children>

        <Label fx:id="lblTitulo" text="Cliente" styleClass="tfx-title-xl"/>

        <VBox styleClass="tfx-card" spacing="12">
            <children>
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="5" right="5" bottom="5" left="5"/>
                    </padding>

                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>

                    <children>
                        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtEmail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="TelÃ©fono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Notas:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextArea fx:id="txtNotas" GridPane.rowIndex="3" GridPane.columnIndex="1" prefRowCount="4"/>
                    </children>
                </GridPane>
            </children>
        </VBox>

        <HBox spacing="8">
            <children>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Cancelar" onAction="#onCancelar" styleClass="tfx-btn-ghost"/>
                <Button fx:id="btnGuardar" text="Guardar" styleClass="tfx-btn-primary" onAction="#onGuardar"/>
            </children>
        </HBox>

    </children>
</VBox>
