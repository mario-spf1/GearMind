<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gearmind.presentation.controller.HomeController" >

  <top>
    <HBox spacing="12" styleClass="tfx-toolbar">
      <children>
        <Label text="GearMind" styleClass="tfx-toolbar-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <TextField promptText="Buscar…" styleClass="tfx-search" />
        <Button text="Abrir" onAction="#onOpen"/>
        <Button text="Nuevo" styleClass="tfx-btn-primary" onAction="#onNewProject"/>
        <Button text="Cerrar sesión"
                onAction="#onLogout"
                styleClass="tfx-btn-ghost"/>
      </children>
    </HBox>
  </top>

  <center>
    <VBox spacing="18" BorderPane.alignment="CENTER" styleClass="tfx-page">
      <children>

        <VBox spacing="6">
          <Label text="Bienvenido a GearMind" styleClass="tfx-title-xxl"/>
          <Label fx:id="lblSubtitle" styleClass="tfx-subtitle"/>
        </VBox>

        <HBox spacing="12">
          <Button text="Ver módulos" styleClass="tfx-btn-primary"/>
          <Button text="Explorar" styleClass="tfx-btn-ghost"/>
        </HBox>

        <GridPane styleClass="tfx-grid">
          <columnConstraints>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
            <ColumnConstraints percentWidth="33"/>
          </columnConstraints>

          <children>
            <VBox GridPane.columnIndex="0" GridPane.rowIndex="0"
                  spacing="8" styleClass="tfx-card">
              <Label text="Clientes" styleClass="tfx-title-xl"/>
              <Label text="Gestión de clientes y vehículos" styleClass="tfx-muted"/>
              <Button text="Ir a Clientes" onAction="#onGoToClientes"/>
            </VBox>

            <VBox GridPane.columnIndex="1" GridPane.rowIndex="0"
                  spacing="8" styleClass="tfx-card">
              <Label text="Citas" styleClass="tfx-title-xl"/>
              <Label text="Agenda y confirmaciones" styleClass="tfx-muted"/>
              <Button text="Ir a Citas" onAction="#onGoToCitas"/>
            </VBox>

            <VBox GridPane.columnIndex="2" GridPane.rowIndex="0"
                  spacing="8" styleClass="tfx-card">
              <Label text="Reparaciones" styleClass="tfx-title-xl"/>
              <Label text="Órdenes de trabajo y reparaciones" styleClass="tfx-muted"/>
              <Button text="Ir a Reparaciones" onAction="#onGoToReparaciones"/>
            </VBox>

            <VBox GridPane.columnIndex="0" GridPane.rowIndex="1"
                  spacing="8" styleClass="tfx-card">
              <Label text="Presupuestos" styleClass="tfx-title-xl"/>
              <Label text="Propuestas económicas y aceptación" styleClass="tfx-muted"/>
              <Button text="Ir a Presupuestos" onAction="#onGoToPresupuestos"/>
            </VBox>

            <VBox GridPane.columnIndex="1" GridPane.rowIndex="1"
                  spacing="8" styleClass="tfx-card">
              <Label text="Facturación" styleClass="tfx-title-xl"/>
              <Label text="Facturas, cobros y pendientes" styleClass="tfx-muted"/>
              <Button text="Ir a Facturación" onAction="#onGoToFacturacion"/>
            </VBox>

            <VBox GridPane.columnIndex="2" GridPane.rowIndex="1"
                  spacing="8" styleClass="tfx-card">
              <Label text="Comunicaciones" styleClass="tfx-title-xl"/>
              <Label text="Avisos a clientes y notificaciones" styleClass="tfx-muted"/>
              <Button text="Ir a Comunicaciones" onAction="#onGoToComunicaciones"/>
            </VBox>

            <VBox fx:id="cardUsuarios"
                  GridPane.columnIndex="0" GridPane.rowIndex="2"
                  spacing="8" styleClass="tfx-card">
              <Label text="Usuarios &amp; Roles" styleClass="tfx-title-xl"/>
              <Label text="Gestión de empleados y permisos" styleClass="tfx-muted"/>
              <Button text="Ir a Usuarios" onAction="#onGoToUsuarios"/>
            </VBox>

            <VBox fx:id="cardInventario"
                  GridPane.columnIndex="1" GridPane.rowIndex="2"
                  spacing="8" styleClass="tfx-card">
              <Label text="Inventario" styleClass="tfx-title-xl"/>
              <Label text="Productos, stock y proveedores" styleClass="tfx-muted"/>
              <Button text="Ir a Inventario" onAction="#onGoToInventario"/>
            </VBox>

            <VBox fx:id="cardConfiguracion"
                  GridPane.columnIndex="2" GridPane.rowIndex="2"
                  spacing="8" styleClass="tfx-card">
              <Label text="Configuración" styleClass="tfx-title-xl"/>
              <Label text="Datos del taller e integraciones" styleClass="tfx-muted"/>
              <Button text="Ir a Configuración" onAction="#onGoToConfiguracion"/>
            </VBox>

            <VBox fx:id="cardInformes"
                  GridPane.columnIndex="0" GridPane.rowIndex="3"
                  GridPane.columnSpan="3"
                  spacing="8" styleClass="tfx-card">
              <Label text="Informes &amp; KPIs" styleClass="tfx-title-xl"/>
              <Label text="Indicadores clave del taller" styleClass="tfx-muted"/>
              <Button text="Ir a Informes" onAction="#onGoToInformes"/>
            </VBox>
            
            <VBox fx:id="cardEmpresas"
                GridPane.columnIndex="0" GridPane.rowIndex="4"
                GridPane.columnSpan="3"
                spacing="8" styleClass="tfx-card">
            <Label text="Empresas" styleClass="tfx-title-xl"/>
            <Label text="Gestión global de empresas (solo super admin)" styleClass="tfx-muted"/>
            <Button text="Gestionar empresas" onAction="#onGoToEmpresas"/>
          </VBox>

          </children>
        </GridPane>

      </children>
    </VBox>
  </center>
</BorderPane>
