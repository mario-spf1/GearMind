<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gearmind.presentation.controller.HomeController"
            fx:id="root">
    <top>
        <HBox spacing="12" styleClass="tfx-toolbar" alignment="CENTER_LEFT">
            <children>
                <Button fx:id="btnToggleSidebar" text="☰" onAction="#onToggleSidebar" mnemonicParsing="false" styleClass="tfx-icon-btn"/>
                <Label text="GearMind" styleClass="tfx-toolbar-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox fx:id="userBox" alignment="CENTER_RIGHT" spacing="8" styleClass="tfx-userbox">
                    <children>
                        <Label fx:id="lblUsuarioActual" text="Usuario" styleClass="tfx-muted"/>
                        <Button fx:id="btnUserMenu" text="▾" mnemonicParsing="false" onAction="#onUserMenu" styleClass="tfx-icon-btn"/>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="0" right="0" bottom="0" left="0"/>
            </padding>
        </HBox>
    </top>

    <left>
        <VBox fx:id="sidebar" prefWidth="190" styleClass="tfx-sidebar" spacing="6">
            <padding>
                <Insets top="14" right="10" bottom="14" left="10"/>
            </padding>
            <children>
                <Label text="Navegación" styleClass="tfx-muted"/>
                <Button fx:id="btnNavDashboard" text="Dashboard" onAction="#onNavDashboard" styleClass="tfx-nav-item" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btnNavClientes" text="Clientes" onAction="#onNavClientes" styleClass="tfx-nav-item" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btnNavVehiculos" text="Vehículos" onAction="#onNavVehiculos" styleClass="tfx-nav-item" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btnNavProductos" text="Productos" onAction="#onNavProductos" styleClass="tfx-nav-item" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btnNavCitas" text="Citas" onAction="#onNavCitas" styleClass="tfx-nav-item" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btnNavReparaciones" text="Reparaciones" onAction="#onNavReparaciones" styleClass="tfx-nav-item" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btnNavPresupuestos" text="Presupuestos" onAction="#onNavPresupuestos" styleClass="tfx-nav-item" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btnNavTareas" text="Tareas" onAction="#onNavTareas" styleClass="tfx-nav-item" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btnNavUsuarios" text="Usuarios" onAction="#onNavUsuarios" styleClass="tfx-nav-item" maxWidth="1.7976931348623157E308"/>
                <Button fx:id="btnNavEmpresas" text="Empresas" onAction="#onNavEmpresas" styleClass="tfx-nav-item" maxWidth="1.7976931348623157E308"/>
            </children>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="contentPane" styleClass="tfx-content"/>
    </center>

</BorderPane>
