<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.gearmind.presentation.controller.EmpresaFormController" spacing="16" styleClass="tfx-page" prefWidth="520">
    <children>

        <Label fx:id="lblTitle" text="Empresa" styleClass="tfx-title-xl"/>

        <VBox styleClass="tfx-card" spacing="12">
            <children>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30"/>
                        <ColumnConstraints percentWidth="70"/>
                    </columnConstraints>

                    <children>
                        <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="CIF:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCif" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtEmail" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Dirección:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtDireccion" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                        <Label text="Ciudad:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCiudad" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                        <Label text="Provincia:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtProvincia" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                        <Label text="CP:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                        <TextField fx:id="txtCp" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                        <Label text="Estado:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                        <CheckBox fx:id="chkActiva" text="Empresa activa" selected="true" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <Label fx:id="lblError" text="" styleClass="tfx-error" visible="false" managed="false"/>
            </children>
        </VBox>

        <HBox spacing="10">
            <children>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnCancelar" text="Cancelar" onAction="#onCancelar" styleClass="tfx-btn-ghost"/>
                <Button fx:id="btnGuardar" text="Guardar" onAction="#onGuardar" styleClass="tfx-btn-primary"/>
            </children>
        </HBox>

    </children>
</VBox>
