<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gearmind.presentation.controller.EmpresaFormController">

    <top>
        <HBox spacing="12" styleClass="tfx-toolbar">
            <children>
                <Label fx:id="lblTitle" text="Empresa" styleClass="tfx-toolbar-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Cancelar" fx:id="btnCancelar" onAction="#onCancelar" styleClass="tfx-btn-ghost"/>
                <Button text="Guardar" fx:id="btnGuardar" onAction="#onGuardar" styleClass="tfx-btn-primary"/>
            </children>
        </HBox>
    </top>

    <center>
        <VBox spacing="16" styleClass="tfx-page">
            <children>

                <Label fx:id="lblError" text="" visible="false" managed="false" styleClass="tfx-error-text"/>

                <VBox spacing="12" styleClass="tfx-card">
                    <children>

                        <GridPane hgap="12" vgap="10">
                            <columnConstraints>
                                <ColumnConstraints percentWidth="25"/>
                                <ColumnConstraints percentWidth="75"/>
                            </columnConstraints>

                            <children>
                                <Label text="Nombre*" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtNombre" promptText="Nombre comercial" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="CIF / NIF" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtCif" promptText="B12345678" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Teléfono" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtTelefono" promptText="+34 600 000 000" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                <Label text="Email" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtEmail" promptText="info@taller.es" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                <Label text="Dirección" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtDireccion" promptText="Calle, número, piso…" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                                <Label text="Ciudad" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtCiudad" promptText="Madrid" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                                <Label text="Provincia" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtProvincia" promptText="Madrid" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                                <Label text="Código Postal" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtCp" promptText="28001" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                                <Label text="Estado" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                                <HBox spacing="8" GridPane.rowIndex="8" GridPane.columnIndex="1">
                                    <children>
                                        <CheckBox fx:id="chkActiva" text="Empresa activa" selected="true"/>
                                    </children>
                                </HBox>

                            </children>
                        </GridPane>

                    </children>
                </VBox>

            </children>
        </VBox>
    </center>

</BorderPane>
